<simulation>

  <!-- All stuff below is usually kept unchanged, and/or managed by ECLIS -->

  <!-- Eclis will/has discard useless 'context' entries below -->
  <context id="surfex" src="./context_surfex.xml" />
  <context id="surfex" src="./ping_surfex.xml"/> 
  <context id="surfex" src="./toy2dummy_surfex.xml"/>
 
  <context id="xios">
    <variable_definition>

      <variable id="optimal_buffer_size" type="string">performance</variable>
      
      <variable_group id="parameters" >
        <variable id="info_level" type="int">100</variable>
        <variable id="print_file" type="bool">true</variable>
      </variable_group>
      
      </variable_definition>
  </context>

</simulation>

