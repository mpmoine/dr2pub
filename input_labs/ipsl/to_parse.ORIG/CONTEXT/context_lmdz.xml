<!-- Context atm -->

<context id="lmdz">

  <calendar type="Gregorian" start_date="1950-01-01 00:00:00" time_origin="1950-01-01 00:00:00" />
  <!-- Define available variables -->
  <field_definition src="./FIELD_DEF/field_def_lmdz.xml"/> 
  <!-- <field_definition src="./FIELD_DEF_CMIP6/field_def_atmosphere_CMIP6.xml"/>   <\!--  NEMO ocean dynamics                     -\-> -->

  <!-- <file_definition src="./FILE_DEF/file_def_lmdz.xml"/> -->

  <axis_definition>
    <axis id="axis_atm"/>
    <axis id="presnivs" axis_ref="axis_atm"  standard_name="Vertical levels" unit="Pa"/>
    <axis id="Ahyb" axis_ref="axis_atm"  standard_name="Ahyb comp of Hyb Cord" unit="Pa"/>
    <axis id="Bhyb" axis_ref="axis_atm"  standard_name="Bhyb comp of Hyb Cord" unit=""/>
    <axis id="Alt" axis_ref="axis_atm"  standard_name="Height approx for scale heigh of 8km at levels" unit="km"/>
    <axis id="plev" axis_ref="axis_atm"  standard_name="model_level_number" unit="Pa"/>
  </axis_definition>

  <domain_definition>
    <domain id="domain_atm" />
    <domain id="dom_glo" domain_ref="domain_atm" />
  </domain_definition>
  <scalar_definition>   <scalar id="scalar_atm" />  </scalar_definition>

    <grid_definition>
    <grid id="grid_atm_scalar">
      <scalar scalar_ref="scalar_atm" />
    </grid>
    <grid id="grid_atm_1D">
      <axis   axis_ref="axis_atm" />
    </grid>    
    <grid id="grid_atm_2D">
      <domain domain_ref="domain_atm" />
    </grid>    
    <grid id="grid_atm_3D">
      <domain domain_ref="domain_atm" />
      <axis axis_ref="axis_atm" />
    </grid>
  </grid_definition>


</context>
