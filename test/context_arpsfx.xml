<!-- -->
<context id="arpsfx">
  
 <calendar type="Gregorian" start_date="1950-01-01 00:00:00" time_origin="1950-01-01 00:00:00" />

  <scalar_definition>   <scalar id="scalar_atm" />  </scalar_definition>

  <axis_definition >
    <axis id="axis_atm"/>
    <axis id="presnivs" axis_ref="axis_atm"  standard_name="Vertical levels" unit="Pa"/>
    <axis id="axis_srf"/>
  </axis_definition>

  <domain_definition >
    <domain id="domain_atm" />
    <domain id="domain_srf" />
    <domain id="complete" ni_glo="18" nj_glo="9" type="rectilinear">
      <generate_rectilinear_domain/>
      <interpolate_domain order="2" renormalize="true" write_weight="true" mode="read_or_compute" />
      <!-- <interpolate_domain order="2" renormalize="true" mode="read" /> -->
    </domain>
  </domain_definition>
  
  <field_definition level="1" prec="4" operation="average" freq_op="1ts" enabled=".true." default_value="9.96921e+36" >
    <field id="field_atm_scalar" scalar_ref="scalar_atm" />
    <field id="field_atm_2D" domain_ref="domain_atm" />
    <field id="field_atm_3D" domain_ref="domain_atm" axis_ref="presnivs" />
    <field id="pressure"     domain_ref="domain_atm" axis_ref="presnivs" detect_missing_value="true"/>
    <field id="height"       domain_ref="domain_atm" axis_ref="presnivs" />

    <field id="field_grid" grid_ref="grid_atm" detect_missing_value="true"/>   
    <field id="field_3D_p_grid" grid_ref="grid_3D_p" field_ref="field_grid"/>

    <field id="hmv5"  field_ref="field_atm_2D" />

    <field id="field_srf_2D" domain_ref="domain_srf" />
    <field id="field_srf_3D" domain_ref="domain_srf" axis_ref="axis_srf" />
  </field_definition >
  
</context>

